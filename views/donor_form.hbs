<div class='row justify-content-md-center h-100' style='margin-top: 100px ;'>
  <div class='card-wrapper'>
    <div class='card fat'>
      <div class='card-body'>
        <h4 class='card-title'>Donor Form</h4>
        <form id='donorForm' action='/donor_form_request' method='POST' novalidate=''>
          <div class='form-group'>
            <label for='name'>Name</label>
            <input id='name' type='text' class='form-control' name='name' value='{{user.fullName}}' required autofocus />
            <div class='invalid-feedback'>
              What's your name?
            </div>
          </div>

          <div class='form-group'>
            <label for='email'>E-Mail Address</label>
            <input id='email' type='email' class='form-control' name='email' value='{{user.email}}' required />
            <input type='hidden' value='{{csrfToken}}' name='_csrf' />
            <div class='invalid-feedback'>
              Your email is invalid
            </div>
          </div>

          <div class='form-group'>
            <label for='email'>Contact Number
            <input id='email' type='email' class='form-control' name='email' value='{{user.mobileNumber}}' required />
            <input type='hidden' value='{{csrfToken}}' name='_csrf' />
            <div class='invalid-feedback'>
              Your email is invalid
            </div>
          </div>

          <div class='form-group'>
            <label for='email'>Address
            <input id='email' type='email' class='form-control' name='email' value='{{user.address}}' required />
            <input type='hidden' value='{{csrfToken}}' name='_csrf' />
            <div class='invalid-feedback'>
              Your email is invalid
            </div>
          </div>

          
          {{#if errorMessage}}
            <div class='alert alert-danger' role='alert'>
              {{errorMessage}}
            </div>
          {{/if}}
          <div class='form-group m-0'>
            <button type='submit' class='btn btn-primary btn-block'>
              Request
            </button>
          </div>
          <div class='mt-4 text-center'>
            Already have an account?
            <a href='/login'>Login</a>
          </div>
        </form>
      </div>
    </div>
    <div class='footer'>
      Copyright &copy; 2021 &mdash; Your Company
    </div>
  </div>
</div>