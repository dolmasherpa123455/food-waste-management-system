<div class='row justify-content-md-center h-100' style='margin-top: 100px ;'>
  <div class='card-wrapper'>
    <div class='card fat'>
      <div class='card-body'>
        <h4 class='card-title'>Login</h4>
        <form action='/login' method='POST'>
          <div class='form-group'>
            <label for='inputEmail'>E-Mail Address</label>
            <input id='inputEmail' type='email' class='form-control' name='inputEmail' />
          </div>

          <div class='form-group'>
            <label for='inputPassword'>Password
              <a href='/forgot-password' class='float-right'>
                Forgot Password?
              </a>
            </label>
            <input type='hidden' name='_csrf' value='{{csrfToken}}' />
            <input type='password' class='form-control' name='inputPassword' />
          </div>

          <div class='form-group'>
            <div class='custom-checkbox custom-control'>
              <input type='checkbox' name='remember' id='remember' class='custom-control-input' />
              <label for='remember' class='custom-control-label'>Remember Me</label>
            </div>
          </div>
          <div class='form-group m-0'>
            <button type='submit' id='btnLoginSubmit' class='btn btn-outline-dark'>
              Login
            </button>
          </div>
          <div class='mt-4 text-center'>
            Don't have an account?
            <a href='/sign-up'>Create One</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>