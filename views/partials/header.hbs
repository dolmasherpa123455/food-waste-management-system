<div class='row' style='border-bottom: 2px solid #000000; '>
  <div class='col-md-4 text-dark'><a href='/'> <h3 class='text-dark'>FWMS</h3></a></div>
  <div class='col-md-4'>
    <nav class='my-2 my-md-0 mr-md-3'>
      <a class='p-2 text-dark h4' href='/about'>About</a>
      <a class='p-2 text-dark h4' href='/contact_us'>Contact</a>
    </nav>
  </div>
  <div class='col-md-4'>
    {{#if isAuthenticated}}
      <form action='/logout' method='POST'>
        <input type='hidden' name='_csrf' value='{{csrfToken}}' />
        
        <button class='btn btn-outline-primary text-dark'>Logout</button>
        {{#if isDonar}}
          <a class='btn btn-outline-dark text-dark' href='/donation?type=donate_post'>Create Donation Post</a>
        {{else}}
          <a class='btn btn-outline-dark text-dark' href='/donor_form'>Want to be a Donor. ?</a>
        {{/if}}
         <a class='btn btn-outline-dark text-dark' href='/donation?type=help_post'>Create Help Post</a>
      </form>
    {{else}}
      <a class='btn btn-outline-dark text-dark' href='/sign-up'>Register</a>
      <a class='btn btn-outline-dark text-dark' href='/login'>Login</a>
    {{/if}}

  </div>
</div>